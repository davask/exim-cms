{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Speaker list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Isspeaker</th>
                <th>Career</th>
                <th>Specialties</th>
                <th>Publications</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('intervenant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.isSpeaker }}</td>
                <td>{{ entity.career }}</td>
                <td>{{ entity.specialties }}</td>
                <td>{{ entity.publications }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('intervenant_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('intervenant_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('intervenant_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
