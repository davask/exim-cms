<head>
    {% block meta_tags %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8">
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    {% endblock %}

    {% include 'EximTheme'~theme.name~'FrontBundle:Template:Head/favicon.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ theme.path.web }}/assetic/admin.css?v={{theme.assets.version.css}}" media="all">
        {% for stylesheet in sonata_admin.adminPool.getOption('stylesheets', []) %}
                <link rel="stylesheet" href="{{ asset(stylesheet) }}?v={{theme.assets.version.css}}">
        {% endfor %}
    {% endblock %}

    {% block javascripts %}
        {% block sonata_javascript_config -%}
        {% include 'EximTheme'~theme.name~'AdminBundle:Assets:head_sonata_javascript_config.html.twig' %}
        {%- endblock %}

        {% block sonata_javascript_pool -%}
        {% include 'EximTheme'~theme.name~'AdminBundle:Assets:head_sonata_javascript_pool.html.twig' %}
        {%- endblock %}

        {% include 'EximTheme'~theme.name~'AdminBundle:Assets:head_locale.html.twig' %}
    {% endblock %}

    <title>
    {% block sonata_head_title -%}
        {% include 'EximTheme'~theme.name~'AdminBundle:Objects:head_sonata_head_title.html.twig' %}
    {%- endblock %}
    </title>

    {% block exim_page_header_javascripts %}
    <script type="text/javascript">
        var importScript = (function () {

          function loadError (oError) {
            throw new URIError("The script " + oError.target.src + " is not accessible.");
          }

          return function (sSrc, fOnload) {
            var oScript = document.createElement("script");
            oScript.type = "text\/javascript";
            oScript.onerror = loadError;
            if (fOnload) { oScript.onload = fOnload; }
            document.body.appendChild(oScript);
            oScript.src = sSrc;
          }

        })();
        var importStylesheet = (function () {

          function loadError (oError) {
            throw new URIError("The stylesheet " + oError.target.src + " is not accessible.");
          }

          return function (sSrc, fOnload) {
            var oStyle = document.createElement("link");
            oStyle.rel = "stylesheet";
            oStyle.media = "all";
            oStyle.onerror = loadError;
            if (fOnload) { oStyle.onload = fOnload; }
            document.head.appendChild(oStyle);
            oStyle.href = sSrc;
          }

        })();
    </script>
    {% endblock %}

</head>
