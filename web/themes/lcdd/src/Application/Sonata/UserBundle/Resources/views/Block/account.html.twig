{% extends sonata_block.templates.block_base %}

{% block block %}
    <ul class="header-account nav navbar-nav navbar-right">
        {% if user %}
        <li>
            <a href="{{ path('sonata_user_profile_show') }}" class="btn btn-primary">{{ user.username }}</a>
        </li>
        <li>
            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-secondary" title="{{ 'link_logout' | trans({}, "ApplicationSonataUserBundle") }}">{{ 'link_logout'|trans({}, 'ApplicationSonataUserBundle') }}</a>
        </li>
        {% else %}
        <li>
            <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary">{{ 'link_login'|trans({}, 'ApplicationSonataUserBundle') }}</a>
        </li>
        <li>
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-secondary">{{ 'link_register'|trans({}, 'ApplicationSonataUserBundle') }}</a>
        </li>
        {% endif %}
    </ul>
{% endblock %}
