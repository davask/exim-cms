{% block sonata_page_html_tag %}
<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }}>
{% endblock %}

{% block sonata_page_head %}
<head {{ sonata_seo_head_attributes() }}>

    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge"><![endif]-->
    {{ sonata_seo_title() }}
    {{ sonata_seo_metadatas() }}
    {#<base href="{{ url('page_slug', { 'path': '/' }) }}">#}

    {% include '@theme/head/favicon.html.twig' %}
    {% include '@theme/head/stylesheets.html.twig' %}

</head>
{% endblock %}

{%- block sonata_page_body_tag -%}
<body class="{{ theme.name }}">
    {% include "@theme/Block/_facebook_sdk.html.twig" %}
    {#% include "SonataSeoBundle:Block:_google_plus_sdk.html.twig" %#}
{%- endblock -%}

{% if app.user and is_granted('ROLE_SUPER_ADMIN') -%}
<!-- exim sonata_page_top_bar -->
{% endif %}
{% block sonata_page_top_bar %}

    {%- if app.user and is_granted('ROLE_SUPER_ADMIN') -%}
    <!-- exim page_top_bar -->
    {% endif %}
    {% block page_top_bar %} {# Deprecated block #}
        {% if sonata_page.isEditor or ( app.user and is_granted('ROLE_PREVIOUS_ADMIN') ) %}

            {%- include '@theme/header/inline_edition.html.twig' %}

    <header class="row navbar" role="banner" {% include '@theme/header/inline_edition.html.twig' with { 'part' : 'attribut' } %}>
        <div class="container">
            <ul class="nav navbar-nav">
                {% include '@theme/header/admin.html.twig' %}
                {% include '@theme/header/edition.html.twig' %}
                {% include '@theme/header/switch.html.twig' %}
            </ul>
        </div>
    </header>

        {% endif %}
    {% endblock %}
    {%- if app.user and is_granted('ROLE_SUPER_ADMIN') -%}
    <!-- /exim-->
{# exim space fix -#}
    {% endif -%}
{% endblock %}
{% if app.user and is_granted('ROLE_SUPER_ADMIN') -%}
<!-- /exim-->
{%- endif %}

{% block sonata_page_container %}
    {% block page_container %}{% endblock %} {# Deprecated block #}
{% endblock %}

{% block sonata_page_asset_footer %}
    {% block page_asset_footer %} {# Deprecated block #}
        {% include '@theme/footer/javascripts.html.twig' %}
        {% include '@theme/head/javascripts.html.twig' %}
    {% endblock %}
{% endblock %}

</body>
</html>
